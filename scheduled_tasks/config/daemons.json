{
  "description": "EC Autoデーモン設定ファイル",
  "version": "1.0",
  "daemons": {
    "sync_inventory": {
      "enabled": true,
      "description": "在庫・価格・visibilityの統合同期",
      "interval_seconds": 3600,
      "platform": "base",
      "dry_run": false,
      "max_retries": 3,
      "retry_delay_seconds": 60,
      "notes": "1時間ごとにAmazon在庫・価格を取得し、BASEと同期"
    },
    "upload_scheduler": {
      "enabled": true,
      "description": "アップロードキュー処理（時間分散出品）",
      "interval_seconds": 60,
      "platform": "base",
      "batch_size": 10,
      "business_hours": {
        "start": 6,
        "end": 23
      },
      "notes": "60秒ごとにキューをチェック、営業時間内（6AM-11PM）のみ処理"
    }
  },
  "logging": {
    "directory": "logs",
    "max_bytes": 10485760,
    "backup_count": 5,
    "level": "INFO"
  },
  "deployment": {
    "windows": {
      "service_manager": "NSSM",
      "install_script": "deploy/windows/install_service.bat"
    },
    "linux": {
      "service_manager": "systemd",
      "unit_file": "deploy/systemd/ecauto-sync.service"
    },
    "docker": {
      "dockerfile": "deploy/docker/Dockerfile",
      "compose_file": "deploy/docker/docker-compose.yml"
    }
  }
}
